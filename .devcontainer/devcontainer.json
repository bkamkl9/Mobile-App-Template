{
    "image": "mcr.microsoft.com/devcontainers/typescript-node",
    "postCreateCommand": "bash -i .devcontainer/post-create.sh",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest"
        },
        "ghcr.io/guiyomh/features/just:0": {
